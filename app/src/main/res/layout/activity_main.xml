<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_marginStart="1dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:textSize="40dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        android:textColor="@color/material_dynamic_primary30"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/operation_clear"
                android:layout_width="match_parent"
                android:backgroundTint="@color/design_default_color_error"
                android:layout_height="match_parent"
                android:text="C" />

            <Button
                android:id="@+id/operation_all_clear"
                android:layout_width="match_parent"
                android:backgroundTint="@color/design_default_color_error"
                android:layout_height="match_parent"
                android:text="AC" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/operation_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_error"
                android:text="=" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/digit_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="7" />

            <Button
                android:id="@+id/digit_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="8" />

            <Button
                android:id="@+id/digit_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="9" />

            <Button
                android:id="@+id/operation_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="÷" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/digit_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="4" />

            <Button
                android:id="@+id/digit_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="5" />

            <Button
                android:id="@+id/digit_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="6" />

            <Button
                android:id="@+id/operation_multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="×" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/digit_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="1" />

            <Button
                android:id="@+id/digit_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="2" />

            <Button
                android:id="@+id/digit_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="3" />

            <Button
                android:id="@+id/operation_subtract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/operation_neg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="±" />

            <Button
                android:id="@+id/digit_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:text="0" />

            <Button
                android:id="@+id/operation_comma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="," />

            <Button
                android:id="@+id/operation_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>